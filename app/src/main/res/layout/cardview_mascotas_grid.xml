<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="180dp"
    android:layout_width="wrap_content"
    android:id="@+id/cvMascotaGrid"
    card_view:cardCornerRadius="@dimen/cvradio"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/cvpadding">

        <ImageView
            android:id="@+id/imgFotocvGrid"
            android:layout_width="@dimen/cvsizefotogrid"
            android:layout_height="@dimen/cvsizefotogrid"
            android:background="@drawable/borde"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/perro3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorDivisor"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNombrecvGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                android:text="@string/nombreMascota"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imghuesoAmarillocvGrid"
                android:layout_width="@dimen/cvsizehuesogrid"
                android:layout_height="@dimen/cvsizehuesogrid"
                android:src="@drawable/rsz_dog_bone_yellow_100" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>